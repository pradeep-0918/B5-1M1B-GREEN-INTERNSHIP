# Example environment variables for the server
# Copy this file to `.env` and fill values for local development

# MongoDB connection string (required)
# Examples:
# - Local MongoDB: mongodb://127.0.0.1:27017/greencredits
# - MongoDB Atlas: mongodb+srv://<user>:<pass>@cluster0.mongodb.net/greencredits
DATABASE_URL=

# Server port (optional)
PORT=3000

# JWT secrets (required for auth)
JWT_SECRET=your_jwt_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Optional AI provider keys (leave blank to use mock behavior)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
